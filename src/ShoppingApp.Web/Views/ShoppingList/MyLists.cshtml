@model List<ShoppingList>

<div class="row mb-2">
    @await Html.PartialAsync("_ShoppingListAddPartial", new ShoppingListAddDto())
</div>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">List Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShoppingList item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-secondary me-1" href="/ShoppingList/Share/@item.Id">
                            Share
                        </a>
                        <a class="btn btn-primary me-1" href="/ShoppingList/View/@item.Id">View</a>
                        <form asp-action="Delete" class="d-inline-block">
                            <input id="shoppingListId" name="shoppingListId" type="hidden" value="@item.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>