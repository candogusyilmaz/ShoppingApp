<header class="bg-light">
    <div class="container">
        <div class="d-flex align-items-center">
            <div class="col-4 d-flex justify-content-start">
                <nav class="navbar navbar-light">
                    <ul class="nav navbar">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a href="/lists" class="nav-link">My Lists</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="/products" class="nav-link">Products</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-4 d-flex justify-content-center">
                <h1>shoppingapp.</h1>
            </div>
            <div class="col-4 d-flex justify-content-end">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/logout" class="btn btn-sm btn-outline-secondary" style="width:100px;">Logout</a>
                }
                else
                {
                    <a href="/register" class="btn btn-sm btn-outline-dark" style="width:100px;">Register</a>
                    <a href="/login" class="btn btn-sm btn-primary" style="width:100px;">Login</a>
                }
            </div>
        </div>
    </div>
</header>